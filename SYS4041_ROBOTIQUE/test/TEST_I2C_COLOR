#include <Arduino.h>
#include <HUSKYLENS.h>
#include <motor.h>

huskylens.writeAlgorithm (ALGORITHM_TAG.RECOGNITION){
// faire la state machine pour la reco de tag 
enum state {IDLE, TURN, FORWARD}
state.e state = IDLE;

    switch (state){
        case IDLE:
            if (isTAG(1)){
                newState(TURN);
            }
            if (isTag(2)){
                newState(FORWARD);
            }
            break;
        case TURN: 
            cmd_robot(0,0);
            if (isTag(2)){
                newState(FORWARD);
            }
            break;
    }
}

void newState (state new) {
    //Serial.println(new);

    state = new;
    last.millis = millis();
}

bool delayState(int delaytime){
    return((millis().last.millis)>= delaytime);
}